
.toc
  position: fixed
  top: 15px
  right: 0;
  padding: 0
  margin: 0
  min-width: 120px
  max-width: 250px
  opacity: .9
  transition: 250ms right, 250ms opacity
  &:hover
    opacity: 1

  ul, ol
    padding: 0

  li
    list-style: none

  a
    display: block
    padding: 2px 5px;
    line-height: 1.3em
    text-decoration: none
    font-weight: bold
    border: none
    -webkit-font-smoothing: antialiased
    background: rgba(0,0,0,.85)
    color: white
    &:hover
      background: rgba(0,0,0,.8)
    &:active
      background: rgba(0,0,0,.7)

  li.warning a
    color: orange;

  // h2
  li li a
    font-size: 0.8em
    font-weight: normal
    padding-left: 15px

  // h3
  li li li a
    font-size: 0.7em
    padding-left: 25px

  // h4
  li li li li a
    font-size: 0.6em
    padding-left: 15px
